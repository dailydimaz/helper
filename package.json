  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm run-on-packages build && next build",
    "build:preview": "pnpm run build && pnpm run db:prod:migrate && pnpm tsx --conditions=react-server ./db/seeds/index.ts",
    "clean": "git clean -xdf .cache .next node_modules",
    "deploy": "pnpm run build && pnpm run db:prod:migrate",
    "db:check": "pnpm run with-dev-env drizzle-kit check --config ./db/drizzle.config.ts",
    "db:generate": "pnpm run with-dev-env drizzle-kit generate --config ./db/drizzle.config.ts",
    "db:migrate": "pnpm run with-dev-env drizzle-kit migrate --config ./db/drizzle.config.ts && pnpm db:setup-cron",
    "db:prod:migrate": "drizzle-kit migrate --config ./db/drizzle.config.ts && pnpm db:prod:setup-cron",
    "db:setup-cron": "pnpm run with-dev-env pnpm db:prod:setup-cron",
    "db:prod:setup-cron": "pnpm tsx --conditions=react-server ./db/setupLightweightCron.ts",
    "db:legacy:setup-cron": "pnpm tsx --conditions=react-server ./db/setupCron.ts",
    "db:test-migration": "pnpm run with-dev-env pnpm tsx --conditions=react-server ./db/test-migration.ts",
    "db:seed": "pnpm run with-dev-env pnpm tsx --conditions=react-server ./db/seeds/seedDatabase.ts",
    "db:reset": "pnpm ensure-ssl-certificates && pnpm db:clear && pnpm db:seed",
    "db:delete-saved-replies": "pnpm run with-dev-env pnpm tsx --conditions=react-server ./scripts/delete-saved-replies.ts",
    "db:migrate-encrypted-to-plaintext": "pnpm run with-dev-env pnpm tsx --conditions=react-server ./scripts/migrateEncryptedToPlaintext.ts",
    "dev": "bash scripts/dev.sh",
    "dev:email": "pnpm run with-dev-env email dev --dir lib/emails --port 3060",
    "dev:next": "lsof -ti:3000 | xargs kill -9 || true && pnpm run with-dev-env pnpm next dev",
    "eval:dev": "EVALITE=true NODE_ENV=test pnpm run with-dev-env evalite watch",
    "evals": "EVALITE=true NODE_ENV=test pnpm run with-dev-env evalite",
    "format": "pnpm run-on-packages format && prettier --check . --ignore-path ./.gitignore --ignore-path ./.prettierignore",
    "lint": "pnpm run-on-packages lint && eslint",
    "repl": "pnpm run with-dev-env pnpm tsx --conditions=react-server --import scripts/replGlobals.mts",
    "repl:preview": "bash scripts/with-vercel-env.sh preview pnpm tsx --conditions=react-server --import scripts/replGlobals.mts",
    "repl:prod": "bash scripts/with-vercel-env.sh production pnpm tsx --conditions=react-server --import scripts/replGlobals.mts",
    "start": "pnpm next start",
    "test": "pnpm run-on-packages test && pnpm test:unit",
    "test:unit": "pnpm run with-dev-env vitest",
    "test:watch": "pnpm test:unit --watch",
    "test:e2e:setup": "bash scripts/setup-e2e-tests.sh",
    "test:e2e": "bash scripts/e2e.sh pnpm playwright test",
    "test:e2e:debug": "bash scripts/e2e.sh pnpm playwright test --debug",
    "test:e2e:headed": "bash scripts/e2e.sh pnpm playwright test --headed",
    "playwright": "node --conditions=react-server node_modules/@playwright/test/cli.js",
    "typecheck": "pnpm run with-dev-env pnpm run build && pnpm run-on-packages typecheck && pnpm run with-dev-env tsc --noEmit && pnpm run db:check",
    "ensure-ssl-certificates": "bash scripts/ensure-ssl-certificates.sh",
    "run-on-packages": "pnpm run --filter=!helperai --if-present --workspace-concurrency=1",
    "with-dev-env": "dotenv -e ./.env.development -e ./.env.development.local -e ./.env.local --",
    "with-test-env": "dotenv -e ./.env.test -e ./.env.test.local --",
    "performance:test": "pnpm run with-dev-env pnpm tsx --conditions=react-server ./scripts/performance-test.ts",
    "performance:benchmark": "pnpm run with-dev-env pnpm tsx --conditions=react-server -e 'import { performanceBenchmark } from \"./lib/performance/benchmark\"; performanceBenchmark.runAllBenchmarks().then(console.log)'",
    "performance:monitor": "pnpm run with-dev-env pnpm tsx --conditions=react-server -e 'import { PerformanceMonitor } from \"./lib/database/optimizations\"; console.log(PerformanceMonitor.getInstance().getPerformanceReport())'"
  },
