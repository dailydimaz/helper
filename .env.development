# Database Configuration - PostgreSQL with Drizzle ORM
DATABASE_URL="postgresql://postgres:postgres@127.0.0.1:5432/helperai_db?sslmode=disable"

# JWT Authentication
JWT_SECRET="your-super-secure-development-jwt-secret-key-at-least-32-characters-long"
JWT_EXPIRES_IN="7d"

# Required integrations
OPENAI_API_KEY="mock-openai-api-key"
IS_TEST_ENV="1"

# Encryption secret (development default)
ENCRYPT_COLUMN_SECRET="1234567890abcdef1234567890abcdef"

# Application URLs
NEXT_PUBLIC_APP_URL="http://localhost:3010"
NEXT_PUBLIC_API_URL="http://localhost:3010/api"
NEXT_PUBLIC_DEV_HOST="http://localhost:3010"

# Development settings
DRIZZLE_LOGGING="1"
NODE_ENV="development"

